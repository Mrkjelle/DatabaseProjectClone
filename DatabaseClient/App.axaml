<Application
    x:Class="DatabaseClient.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    RequestedThemeVariant="Dark">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.Styles>
        <FluentTheme />
        <Style Selector="DataGrid">
            <Setter Property="Background" Value="#111" />
            <Setter Property="Foreground" Value="#DDD" />
            <Setter Property="BorderBrush" Value="#B4151D" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="GridLinesVisibility" Value="All" />
            <Setter Property="HorizontalGridLinesBrush" Value="#222" />
            <Setter Property="VerticalGridLinesBrush" Value="#222" />
            <Setter Property="HeadersVisibility" Value="All" />
        </Style>

        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#B4151D" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="BorderBrush" Value="#B4151D" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Padding" Value="6,4" />
        </Style>

        <Style Selector="DataGridCell">
            <Setter Property="BorderBrush" Value="#222" />
            <Setter Property="BorderThickness" Value="0,0,1,1" />
            <Setter Property="Padding" Value="6,3" />
        </Style>

        <Style Selector="DataGridRow:pointerover">
            <Setter Property="Background" Value="#2A2A2A" />
        </Style>

        <Style Selector="DataGridRow:selected">
            <Setter Property="Background" Value="#B4151D" />
            <Setter Property="Foreground" Value="White" />
        </Style>
        <StyleInclude Source="avares://Avalonia.Controls.DataGrid/Themes/Fluent.xaml" />
        <StyleInclude Source="Assets/Themes/Styles.axaml" />
    </Application.Styles>
</Application>
