<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Base button style override -->
    <Style Selector="Button">
        <Setter Property="Background" Value="#B4151D"/>     <!-- default red -->
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#B4151D"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="Margin" Value="4"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Hover -->
    <Style Selector="Button:pointerover">
        <Setter Property="Background" Value="#D72638"/>
        <Setter Property="BorderBrush" Value="#D72638"/>
    </Style>

    <!-- Pressed -->
    <Style Selector="Button:pressed">
        <Setter Property="Background" Value="#8E1018"/>
        <Setter Property="BorderBrush" Value="#8E1018"/>
    </Style>

    <!-- Disabled -->
    <Style Selector="Button:disabled">
        <Setter Property="Opacity" Value="0.6"/>
    </Style>
</Styles>