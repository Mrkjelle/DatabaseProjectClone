<UserControl
    x:Class="DatabaseClient.Views.AssignmentView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:DatabaseClient.ViewModels"
    x:DataType="vm:AssignmentViewModel">

    <Grid Background="rgba(30, 30, 30, 1)" RowDefinitions="Auto,*">
        <Grid
            Grid.Row="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            ColumnDefinitions="Auto,Auto">
            <TextBlock
                Grid.Column="0"
                Margin="10"
                VerticalAlignment="Center"
                FontSize="20"
                FontWeight="Bold"
                Foreground="rgba(180, 21, 29, 1)"
                Text="{Binding HeaderTitle}" />

            <Button
                Grid.Column="1"
                VerticalAlignment="Center"
                Click="OnSwitchToDivisionAssignments"
                Content="{Binding ToggleButtonText}" />
        </Grid>

        <DataGrid
            x:Name="EmployeeAssignmentGrid"
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="True"
            AutoGeneratingColumn="OnAutoGeneratingColumn"
            GridLinesVisibility="All"
            HeadersVisibility="All"
            IsReadOnly="True"
            IsVisible="{Binding !ShowDivisionAssignments}"
            ItemsSource="{Binding EmployeeAssignments}" />

        <DataGrid
            x:Name="DivisionAssignmentGrid"
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="True"
            AutoGeneratingColumn="OnAutoGeneratingColumn"
            GridLinesVisibility="All"
            HeadersVisibility="All"
            IsReadOnly="True"
            IsVisible="{Binding ShowDivisionAssignments}"
            ItemsSource="{Binding DivisionAssignments}" />
    </Grid>
</UserControl>
