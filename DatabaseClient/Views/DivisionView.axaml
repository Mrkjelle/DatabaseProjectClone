<UserControl
    x:Class="DatabaseClient.Views.DivisionView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:DatabaseClient.ViewModels"
    x:DataType="vm:DivisionViewModel">

    <Grid Background="rgba(30, 30, 30, 1)" RowDefinitions="Auto,*">
        <TextBlock
            Margin="10"
            FontSize="20"
            FontWeight="Bold"
            Foreground="rgba(180, 21, 29, 1)"
            Text="Corporate Divisions" />
        <DataGrid
            x:Name="DivisionGrid"
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="True"
            AutoGeneratingColumn="OnAutoGeneratingColumn"
            GridLinesVisibility="All"
            HeadersVisibility="All"
            IsReadOnly="True"
            ItemsSource="{Binding Divisions}">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Click="OnEditDivisionClick" Header="Edit Division" />
                    <MenuItem Click="OnDeleteDivisionClick" Header="Delete Division (Will Delete all Employees!)" />
                    <MenuItem Header="Assign to Project" SubmenuOpened="OnAssignProjectSubmenuOpened">
                        <MenuItem.Items>
                            <MenuItem Header="Loading..." IsEnabled="False" />
                        </MenuItem.Items>
                    </MenuItem>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
    </Grid>
</UserControl>
