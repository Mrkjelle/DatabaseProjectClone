<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="DatabaseClient.Views.LoginView"
             Width="400" Height="300">

    <Border Background="#1E1E1E" CornerRadius="10" Padding="30">
        <StackPanel Spacing="10" HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Database Client Login"
                       Foreground="White"
                       FontSize="20"
                       HorizontalAlignment="Center"/>

            <TextBox Width="200" Watermark="Username" Text="{Binding Username}"/>
            <TextBox Width="200" Watermark="Password"
                     PasswordChar="â€¢"
                     Text="{Binding Password}"/>

            <Button Content="Login"
                    Width="200"
                    Command="{Binding LoginCommand}"/>
        </StackPanel>
    </Border>
</UserControl>